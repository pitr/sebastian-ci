<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="/">Sebastian CI</a>

      <ul class='nav pull-right'>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= image_tag "//secure.gravatar.com/avatar/#{current_user.gravatar_id}?s=24", :class => 'img-rounded' %>
              <%= current_user.name %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to 'Sign Out', sign_out_path %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to 'Sign In with Github', user_omniauth_authorize_path(:github) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
